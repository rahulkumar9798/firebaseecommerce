<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserOtpGetActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="11dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Login with OTP"
            android:textStyle="bold"
            android:textSize="34sp"
            android:padding="11dp"/>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:src="@drawable/iiiconotp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Verification code"
        android:textStyle="bold"
        android:textSize="34sp"
        android:padding="11dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="we have send the code verification to your"
        android:textSize="16sp"
        android:padding="11dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="11dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="+91 97985 84258"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"
            android:gravity="start"
            android:padding="11dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:src="@drawable/edit" />

    </LinearLayout>

    <EditText
        android:id="@+id/edtOtp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="number"
        android:background="@drawable/editshep"
        android:layout_marginStart="20dp"
        android:hint="Enter OTP"
        android:layout_marginEnd="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:padding="11dp">

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"
            android:background="@drawable/editshep"
            android:layout_marginStart="10dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"
            android:background="@drawable/editshep"
            android:layout_marginStart="10dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/editshep"
            android:layout_marginStart="10dp"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"
            android:background="@drawable/editshep"
            android:layout_marginStart="10dp"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"
            android:background="@drawable/editshep"
            android:layout_marginStart="10dp"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"

            android:background="@drawable/editshep"
            android:layout_marginStart="10dp"/>




    </LinearLayout>



    <Button
        android:id="@+id/btnOtpSubmit"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:text="submit"
        android:textSize="25sp"
        app:cornerRadius="15dp" />

</LinearLayout>